<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.canvus.app.dao.mapper.UserMapper">
<!-- 회원등록을 위한 인서트문 -->
<insert id="signup" parameterType="user">
	INSERT INTO USERS(
	    USER_ID
	    ,GIVEN_NAME
	    ,FAMILY_NAME
	    ,PROFILE_PHOTO
	    ,EMAIL
	    ,NICKNAME
	    ,INTRODUCTION
	) values (
	    #{user_id}
	    ,#{given_name}
	    ,#{family_name}
	    ,#{profile_photo}
	    ,#{email}
	    ,#{nickname}
	    ,#{introduction}
	)
</insert>

<!-- 로그인을 수행하기 위한 셀렉트문 -->
<select id="login" parameterType="string" resultType="string">
	SELECT
		USER_ID
	FROM
		USERS
	WHERE
		USER_ID = #{user_id}
</select>

<select id="userSearch" parameterType="string" resultType="user">
	SELECT
		USER_ID
		,PROFILE_PHOTO
		,NICKNAME
		,INTRODUCTION
	FROM
		USERS
	WHERE
		USER_ID = #{string}
	ODER BY
		NICKNAME ASC

</select>

</mapper>